apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ include "app-choppti-chart.fullname" . }}-ti
  labels:
    app: chopp-ti
  {{- include "app-choppti-chart.labels" . | nindent 4 }}
spec:
  replicas: {{ .Values.ti.replicas }}
  selector:
    matchLabels:
      app: chopp-ti
    {{- include "app-choppti-chart.selectorLabels" . | nindent 6 }}
  template:
    metadata:
      labels:
        app: chopp-ti
      {{- include "app-choppti-chart.selectorLabels" . | nindent 8 }}
    spec:
      containers:
      - env:
        - name: KUBERNETES_CLUSTER_DOMAIN
          value: {{ quote .Values.kubernetesClusterDomain }}
        image: {{ .Values.ti.choppti.image.repository }}:{{ .Values.ti.choppti.image.tag
          | default .Chart.AppVersion }}
        name: choppti
        resources: {}